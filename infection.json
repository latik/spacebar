{
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "DataFixtures",
            "Migrations",
            "Resources",
            "Tests"
        ]
    },
    "timeout": 10,
    "logs": {
        "text": "infection.log",
        "summary": "summary.log",
        "debug": "debug.log",
        "perMutator": "per-mutator.md"
    },
    "tmpDir": "var/infection-temp",
    "phpUnit": {
        "customPath": ".\/bin\/phpunit"
    },
    "mutators": {
        "@default": true,
        "@function_signature": false
    }
}